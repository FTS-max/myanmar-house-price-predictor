<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Category Views -->
    <record id="view_pos_product_category_form" model="ir.ui.view">
        <field name="name">pos.product.category.form</field>
        <field name="model">pos.product.category</field>
        <field name="arch" type="xml">
            <form string="POS Product Category">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Category Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_id"/>
                            <field name="shop_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="pos_available"/>
                            <field name="pos_sequence" attrs="{'invisible': [('pos_available', '=', False)]}"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_product_category_tree" model="ir.ui.view">
        <field name="name">pos.product.category.tree</field>
        <field name="model">pos.product.category</field>
        <field name="field_parent">child_id</field>
        <field name="arch" type="xml">
            <tree string="POS Product Categories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="shop_id"/>
                <field name="pos_available"/>
            </tree>
        </field>
    </record>

    <record id="view_pos_product_category_search" model="ir.ui.view">
        <field name="name">pos.product.category.search</field>
        <field name="model">pos.product.category</field>
        <field name="arch" type="xml">
            <search string="Search POS Product Categories">
                <field name="name"/>
                <field name="shop_id"/>
                <filter string="Available in POS" name="pos_available" domain="[('pos_available', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Shop" name="groupby_shop" context="{'group_by': 'shop_id'}"/>
                    <filter string="Parent Category" name="groupby_parent" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_pos_product_category" model="ir.actions.act_window">
        <field name="name">POS Product Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.product.category</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_pos_product_category_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product category
            </p>
        </field>
    </record>

    <!-- Product Template Inherited Views -->
    <record id="product_template_form_view_pos_inherit" model="ir.ui.view">
        <field name="name">product.template.form.pos.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="POS Settings" name="pos_settings">
                    <group>
                        <group string="Shop Information">
                            <field name="shop_id" options="{'no_create': True}"/>
                            <field name="shop_category_id" domain="[('shop_id', '=', shop_id)]"
                                   attrs="{'invisible': [('shop_id', '=', False)]}"/>
                            <field name="shop_sku"/>
                        </group>
                        <group string="POS Display">
                            <field name="pos_available"/>
                            <field name="pos_sequence" attrs="{'invisible': [('pos_available', '=', False)]}"/>
                            <field name="pos_use_variants"/>
                        </group>
                    </group>
                    <group string="POS Pricing">
                        <field name="list_price_shop"/>
                        <field name="discount_price"/>
                        <field name="discount_start"/>
                        <field name="discount_end"/>
                    </group>
                    <group string="POS Description">
                        <field name="pos_description" nolabel="1" placeholder="Description shown in POS interface..."/>
                    </group>
                    <group string="Additional Images">
                        <field name="pos_image_ids" widget="one2many_list" nolabel="1">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="image" widget="image" options="{'size': [90, 90]}"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_pos_product_category"
              name="Product Categories"
              action="action_pos_product_category"
              parent="product.menu_product_category_action"
              sequence="10"/>
</odoo>